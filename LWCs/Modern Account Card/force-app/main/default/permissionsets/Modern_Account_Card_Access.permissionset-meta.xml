<?xml version="1.0" encoding="UTF-8"?>
<PermissionSet xmlns="http://soap.sforce.com/2006/04/metadata">
    <label>Modern Account Card Access</label>
    <description>Grants access to custom fields used by the Modern Account Card component</description>
    <hasActivationRequired>false</hasActivationRequired>
    
    <!-- Account Logo Field -->
    <fieldPermissions>
        <field>Account.AccountCardLogo__c</field>
        <editable>true</editable>
        <readable>true</readable>
    </fieldPermissions>
    
    <!-- Brand Affinity Fields -->
    <fieldPermissions>
        <field>Account.Brand_1_Name__c</field>
        <editable>true</editable>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <field>Account.Brand_1_Image__c</field>
        <editable>true</editable>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <field>Account.Brand_2_Name__c</field>
